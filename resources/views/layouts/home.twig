{% extends 'base.twig' %}

{% block body %}
    <div class="mb-medium txt-center">
        <p>
            Welcome, {{ name }}!
        </p>
    </div>

    {% if form.name %}
        <div class="mb-small">
            <div class="form-notice form-notice--success">
                <p class="form-notice__descripton">
                    Your name is: <strong>{{ form.name }}</strong>
                </p>
            </div>
        </div>
    {% endif %}

    <form class="txt-center" method="post" action="">
        <div class="form-row">
            <div class="form-row__item">
                <label class="form-row__label" for="name">
                    Name
                </label>

                <input id="name" type="text" name="name" placeholder="e.g. Jim Gordon">
            </div>
        </div>

        <div class="form-row">
            <div class="form-row__item">
                <button>
                    Submit
                </button>

                {% if csrf %}
                    <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                    <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                {% endif %}
            </div>
        </div>
    </form>
{% endblock %}
